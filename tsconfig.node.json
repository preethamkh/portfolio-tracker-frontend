{
  // keeping this separate to avoid polluting the main tsconfig.json
  // for node-specific config like vite.config.ts
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.ts"]
}
